<% layout('layouts/template')%>

    <h1>All Clubs</h1>

    <div class="row text-center justify-content-center">
        <% for (let club of clubs){%>
            <div class="card mb-3 mx-3 col-lg-3 col-md-5 col-sm-12">
                <img class="img-fluid" alt="" src="<%=club.image%>">

                <div class="card-body">
                    <h5 class="card-title">
                        <%= club.name %>
                    </h5>
                    <p class="card-text">
                        <%= club.description.substring(0,100) %>...
                    </p>
                    <a class="btn btn-primary" href="/clubs/<%=club._id%>">Learn more</a>
                </div>
            </div>
            <% }%>
    </div>