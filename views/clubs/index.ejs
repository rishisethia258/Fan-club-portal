<% layout('layouts/template')%>

    <div class="alert alert-success pb-0 mt-0 shadow mx-5 text-center">
        <h4 class="alert-heading">
            All Clubs
        </h4>
        <p>
            You can explore various clubs here.
        </p>
        <% if(!currentUser) { %>
            <p><a href="/login/" class="btn btn-success">Login here</a></p>
            <% } else { %>
                <p>
                    <a href="/yourclubs/" class="btn btn-success">Your Clubs</a>
                    <a href="/clubs/new" class="btn btn-primary">Create Club</a>
                </p>
                <% } %>
    </div>
    <div class="row text-center justify-content-center">
        <% for (let club of clubs){%>
            <div class="mb-3 mx-1 col-lg-3 col-md-5 col-sm-12">
                <div class="card shadow ">
                    <img class="img-fluid" alt="" src="<%=club.image%>">

                    <div class="card-body">
                        <h5 class="card-title">
                            <%= club.name %>
                        </h5>
                        <p class="card-text">
                            <%= club.description.substring(0,100) %>...
                        </p>
                        <a class="btn btn-primary" href="/clubs/<%=club._id%>">Learn more</a>
                    </div>
                </div>
            </div>
            <% }%>
    </div>