<% layout('layouts/template')%>
    <div class="alert alert-success pb-0 mt-0 shadow mx-5 text-center">
        <h4 class="alert-heading">
            Your Clubs
        </h4>
        <p>
            You can head over to chat or check out description of your clubs.
        </p>
        <% if(!currentUser) { %>
            <p><a href="/login/" class="btn btn-success">Login here</a></p>
            <% } else { %>
                <p>
                    <a href="/clubs/" class="btn btn-success">All Clubs</a>
                    <a href="/clubs/new" class="btn btn-primary">Create Club</a>
                </p>
                <% } %>
    </div>
    <div class="row text-center justify-content-center">
        <% for (let club of user.adminOf){%>
            <div class="mb-3 mx-1 col-lg-3 col-md-5 col-sm-12">
                <div class="card shadow ">
                    <img class="img-fluid" alt="" src="<%=club.image%>">

                    <div class="card-body">
                        <h5 class="card-title">
                            <%= club.name %>
                        </h5>
                        <p class="card-text">
                            <%= club.description.substring(0,100) %>...
                        </p>
                        <a class="btn btn-primary" href="/clubs/<%=club._id%>">Learn more</a>
                        <a class="btn btn-success" href="/clubs/<%=club._id%>/chat">Go To Chat</a>
                    </div>
                </div>
            </div>
            <% }%>
                <% for (let club of user.memberOf){%>
                    <div class="mb-3 mx-1 col-lg-3 col-md-5 col-sm-12">
                        <div class="card shadow ">
                            <img class="img-fluid" alt="" src="<%=club.image%>">

                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= club.name %>
                                </h5>
                                <p class="card-text">
                                    <%= club.description.substring(0,100) %>...
                                </p>
                                <a class="btn btn-primary" href="/clubs/<%=club._id%>">Learn more</a>
                                <a class="btn btn-success" href="/clubs/<%=club._id%>/chat">Go To Chat</a>
                            </div>
                        </div>
                    </div>
                    <% }%>
    </div>